{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fokus-editor",
  "version": "0.1.1",
  "identifier": "com.shek.fokus-editor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Fokus. Editor",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self' asset: tauri: http://tauri.localhost; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: tauri:; font-src 'self' data:; connect-src ipc: http://ipc.localhost; worker-src 'self' blob:; child-src 'self' blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}